<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <LinearLayout
        android:padding="13dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@mipmap/ic_launcher"
            android:id="@+id/img"
            android:layout_width="66dp"
            android:layout_height="66dp" />

        <LinearLayout
            android:layout_marginLeft="8dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="33dp">

                <TextView
                    android:id="@+id/name_tv"
                    android:gravity="center_vertical"
                    android:textColor="#3c3c3c"
                    android:textSize="16sp"
                    android:text="香蕉君或许会迟到"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />

                <TextView
                    android:layout_alignParentRight="true"
                    android:id="@+id/distance_tv"
                    android:gravity="center_vertical"
                    android:textColor="#3c3c3c"
                    android:textSize="13sp"
                    android:text="次元距离"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.zsh.shopclient.view.RatingBar
                    android:id="@+id/evaluate_rb"
                    xmlns:lxhRatingBar="http://schemas.android.com/apk/res-auto"
                    lxhRatingBar:canEdit="true"
                    lxhRatingBar:countSelected="0"
                    lxhRatingBar:dividerWidth="2dp"
                    lxhRatingBar:starCount="5"
                    lxhRatingBar:stateResId="@drawable/five_rating_bar"
                    lxhRatingBar:widthAndHeight="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="月销233"
                    android:textSize="13sp"
                    android:textColor="#3c3c3c"
                    android:id="@+id/sales_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:text="月销:233"
                    android:textSize="13sp"
                    android:textColor="#3c3c3c"
                    android:id="@+id/dispatching_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_marginLeft="6dp"
                    android:text="接客:233"
                    android:textSize="13sp"
                    android:textColor="#3c3c3c"
                    android:id="@+id/price_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <View
                android:layout_marginTop="8dp"
                android:background="#e9e9e9"
                android:layout_width="match_parent"
                android:layout_height="1dp"></View>

            <TextView
                android:id="@+id/activites_tv"
                android:textColor="#197FEE"
                android:textSize="13sp"
                android:text="233个活动"
                android:layout_gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.zsh.shopclient.view.MyListView
                android:dividerHeight="6dp"
                android:divider="@null"
                android:id="@+id/activites_list"
                android:verticalSpacing="6dp"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </com.zsh.shopclient.view.MyListView>

        </LinearLayout>

    </LinearLayout>

    </LinearLayout>
