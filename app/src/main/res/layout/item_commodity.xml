<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/image"
        android:layout_width="@dimen/space_between64"
        android:layout_height="match_parent"
        android:src="@mipmap/ic_launcher"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/margin8"
        android:orientation="vertical">
        <TextView
            android:id="@+id/text_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="name"
            android:textSize="@dimen/size16"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/text_monthSalesVolume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/monthSalesVolume"
            android:textSize="@dimen/size12"
            android:textColor="@color/black"
            android:visibility="gone"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/text_currentPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="currentPrice"
                android:textSize="@dimen/size16"
                android:textColor="@color/scarlet"/>
            <TextView
                android:id="@+id/text_originalCost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/text_currentPrice"
                android:layout_marginLeft="@dimen/margin16"
                android:text="originalCost"
                android:textSize="@dimen/size16"
                android:textColor="@color/textGray"
                android:visibility="gone"/>
            <ImageView
                android:id="@+id/image_reduce"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/text_quantity"
                android:src="@mipmap/icon_reduce"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/text_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin8"
                android:layout_marginRight="@dimen/margin8"
                android:layout_toLeftOf="@+id/image_add"
                android:text="quantity"
                android:textSize="@dimen/size16"
                android:textColor="@color/textGray"
                android:visibility="visible"/>
            <ImageView
                android:id="@+id/image_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@mipmap/icon_add"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>