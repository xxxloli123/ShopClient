<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:alpha="1.0">
    <ImageView
        android:id="@+id/image"
        android:layout_width="@dimen/space_between96"
        android:layout_height="@dimen/space_between96"
        android:src="@mipmap/ic_launcher"/>
    <TextView
        android:id="@+id/text_currentPrice"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_between64"
        android:background="@color/white"
        android:layout_toRightOf="@+id/image"
        android:layout_marginTop="@dimen/margin32"
        android:paddingLeft="@dimen/margin16"
        android:gravity="center_vertical"
        android:text="currentPrice"
        android:textColor="@color/scarlet"
        android:textSize="@dimen/size24"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/image"
        android:layout_above="@+id/text_confirm"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/backgroundGray">
            <TextView
                android:id="@+id/text_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin16"
                android:text="@string/category"
                android:textSize="@dimen/size16"
                android:textColor="@color/textDarkgray"/>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingLeft="@dimen/margin16"
                android:paddingRight="@dimen/margin16"/>
            <TextView
                android:id="@+id/text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin16"
                android:text="@string/specification"
                android:textSize="@dimen/size16"
                android:textColor="@color/textDarkgray"/>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingLeft="@dimen/margin16"
                android:paddingRight="@dimen/margin16"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin16"
                android:layout_gravity="center"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/purchaseQuantity"
                    android:textSize="@dimen/size16"
                    android:textColor="@color/textDarkgray"/>
                <ImageView
                    android:id="@+id/image_reduce"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/text_quantity"
                    android:src="@mipmap/icon_reduce"
                    android:visibility="gone"/>
                <TextView
                    android:id="@+id/text_quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin8"
                    android:layout_marginRight="@dimen/margin8"
                    android:layout_toLeftOf="@+id/image_add"
                    android:text="quantity"
                    android:textSize="@dimen/size16"
                    android:textColor="@color/textDarkgray"
                    android:visibility="visible"/>
                <ImageView
                    android:id="@+id/image_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/icon_add"/>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
    <TextView
        android:id="@+id/text_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/scarlet"
        android:layout_alignParentBottom="true"
        android:padding="@dimen/margin16"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="@string/confirm"
        android:textColor="@color/white"
        android:textSize="@dimen/size20"/>
</RelativeLayout>