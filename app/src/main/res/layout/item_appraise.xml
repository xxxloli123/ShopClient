<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin16"
            android:layout_gravity="center"
            android:text="@string/product"
            android:textSize="@dimen/size16"
            android:textColor="@color/textGray"/>
        <RatingBar
            android:id="@+id/rating_bar_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            style="@style/DiyRatingBar"
            android:rating="1"
            android:stepSize="8"
            android:numStars="5"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/image_product"
            android:layout_width="@dimen/space_between64"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher"/>
        <TextView
            android:id="@+id/text_propertyName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="propertyName"
            android:textSize="@dimen/size16"
            android:textColor="@color/textDarkgray"/>
    </LinearLayout>
    <EditText
        android:id="@+id/edit_shopComment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/backgroundGray"
        android:layout_margin="@dimen/margin16"
        android:hint="@string/inputDetail"
        android:padding="@dimen/margin8"/>
</LinearLayout>