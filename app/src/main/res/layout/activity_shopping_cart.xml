<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/text_closeAccount"
        android:orientation="vertical">
        <include layout="@layout/recycler"/>
    </LinearLayout>
    <TextView
        android:id="@+id/text_closeAccount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:visibility="visible"
        android:layout_toLeftOf="@+id/text_buyImmediately"
        android:background="@color/scarlet"
        android:padding="@dimen/margin16"
        android:text="@string/closeAccount"
        android:textSize="@dimen/size16"
        android:textColor="@color/white"/>
</RelativeLayout>